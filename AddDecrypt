public static String ungroupify(String text) {
        text = text.replace(" ", "");
        text = text.replace("x", "");
        return text;
    }
    public static String decryptString(String text, int key) {
        text = ungroupify(text);
        text = caesarify(text, - key);
        return text;
    }


